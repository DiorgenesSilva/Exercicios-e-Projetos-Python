#JOGO EM PYTHON 3 PEDRA PAPEL E TEZOURA JOPKENPÔ0
print("PEDRA PAPEL TEXOURA,JOKENPÔ")
#
print("50 * "=")
#
print("""
Crie um programa que faça o
computador jogar JOKENÔ:
Com você:
COMANDOS JOKENPO
[0] Para Jogar PEDRA
[1] Para Jogar PAPEL
[2] Para Jogar TEZOURA 
""")
#
from random import randint
from time import sleep
itens = ('PEDRA','PAPEL',"TEZOURA") 
computador = randint(0,2)
#
jogador =int(input("Qual é a sua Jogada ? "))
#
print(50 * '-')
#
print('JO')
sleep(1)
print('KEN')
sleep(1)
print('PO')
#
print(" O COMPUTADOR  fez a sua jOGADA {} ... ".format(itens[computador]))
print("VOCE  FEZ a sua JOGADA  {} ...".format(itens[jogador]))
print("A sua jogada foi {} e o Computador Jogou {} ...JOKEPÔ...".format(jogador,computador))
#
#
if computador  == 0 : # Computador jogou Pedra 
    if jogador == 0 :
        print('EMPATE')
    elif jogador == 1:
        print('VOCE VENCEU !')
    elif jogador == 2:
        print('COMPUTADOR VENCEU !')
    else:  
        print('JOGADA INVALIDA !!')      
#
elif computador == 1 : # Cmputador jogou Papel 
    if jogador == 0 :
        print('COMPUTADOR VENCEU !!')
    elif jogador == 1:
        print('EMPATE!')
    elif jogador == 2:
        print('JOGADOR VENCEU VENCEU !')
    else:  
        print('JOGADA INVALIDA !!') 
#
elif computador == 2 : # Computador jogou Tezoura  
    if jogador == 0 :
        print('JOGADOR VENCEU !!')
    elif jogador == 1:
        print('COMPUTADOR VENCEU !')
    elif jogador == 2:
        print(' EMPATE !')
    else:  
        print('JOGADA INVALIDA !!')             
#
#
print(50 * '-')
#  
