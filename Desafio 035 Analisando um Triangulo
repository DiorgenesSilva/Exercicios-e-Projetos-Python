
#ANALISANDO UM TRIANGULO
print("""Desenvolva um programa que leia o comprimento
      de tres retas e diga o usu√°rio se elas podem formar um tringulo .""")
reta1= float(input("Digite a primeira reta"))
reta2= float(input("Digite a Segunda reta "))
reta3 = float(input("Digite a terceira reta"))
if reta1 < reta2 + reta3 and reta2 < reta1 + reta3 and reta3 < reta1 + reta2:
   print("O seguimentos acima podem formar um triangulo ")
else:
   print("os  segmentos acima nao podem formar um triangulo")
print("***FIM***")   
